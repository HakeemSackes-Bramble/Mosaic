<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/trial_gameboard"
        >

        <nyc.c4q.hakeemsackes_bramble.nortmosiac.custom_views.PlayerView
            android:id="@+id/customizer_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <nyc.c4q.hakeemsackes_bramble.nortmosiac.custom_views.ColorWheelView
            android:id="@+id/customizer_colorwheel"
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_height="0dp"

            />

        <Button
            android:id="@+id/customizer_finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finish" />
    </LinearLayout>

</LinearLayout>